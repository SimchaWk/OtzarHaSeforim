@model OtzarHaSeforim.ViewModel.SetBooksVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h2>Shelf Id: @ViewBag.ShelfId</h2>

<h4>SetBooksVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <input type="hidden" name="shelfId" value="@ViewBag.ShelfId" />

            <h4>Books</h4>
            <div id="books-container">
                @if (ViewBag.Books != null)
                {
                    for (int i = 0; i < ViewBag.Books.Count; i++)
                    {
                        <div class="book-entry">
                            <div class="form-group">
                                <label>Book Name</label>
                                <input type="text" name="Books[@i].BookName" class="form-control" value="@ViewBag.Books[i].BookName" />
                            </div>
                            @if (i == 0)
                            {
                                <div class="form-group">
                                    <label>High Book</label>
                                    <input type="number" id="HighBook" name="Books[@i].HighBook" class="form-control" value="@ViewBag.Books[i].HighBook" />
                                </div>
                            }
                            else
                            {
                                <input type="hidden" name="Books[@i].HighBook" class="form-control" value="@ViewBag.Books[i].HighBook" />
                            }
                            <div class="form-group">
                                <label>Width Book</label>
                                <input type="number" name="Books[@i].WidthBook" class="form-control" value="@ViewBag.Books[i].WidthBook" />
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="book-entry">
                        <div class="form-group">
                            <label>Book Name</label>
                            <input type="text" name="Books[0].BookName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>High Book</label>
                            <input type="number" id="HighBook" name="HighBook" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Width Book</label>
                            <input type="number" name="Books[0].WidthBook" class="form-control" />
                        </div>
                    </div>
                }
            </div>
            <button type="button" id="add-book" class="btn btn-secondary">Add another book</button>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('add-book').addEventListener('click', function () {
            var container = document.getElementById('books-container');
            var index = container.getElementsByClassName('book-entry').length;

            var bookEntry = document.createElement('div');
            bookEntry.className = 'book-entry';

            bookEntry.innerHTML = `
                        <div class="form-group">
                            <label>Book Name</label>
                            <input type="text" name="Books[${index}].BookName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Width Book</label>
                            <input type="number" name="Books[${index}].WidthBook" class="form-control" />
                        </div>
                        <input type="hidden" name="Books[${index}].HighBook" class="form-control" value="${document.getElementById('HighBook').value}" />
                    `;

            container.appendChild(bookEntry);
        });

        document.getElementById('HighBook').addEventListener('input', function () {
            var highValue = this.value;
            document.querySelectorAll('input[name$=".HighBook"]').forEach(function (element) {
                element.value = highValue;
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
