@model OtzarHaSeforim.ViewModel.ShelfVM;

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Shelf</h1>

<h2 hidden>Library Id: @ViewBag.Id</h2>
<h4>Shelf Details:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HighShelf" class="control-label"></label>
                <input asp-for="HighShelf" class="form-control" />
                <span asp-validation-for="HighShelf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidthShelf" class="control-label"></label>
                <input asp-for="WidthShelf" class="form-control" />
                <span asp-validation-for="WidthShelf" class="text-danger"></span>
            </div>
            <input type="hidden" name="LibraryId" value="@ViewBag.Id" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
